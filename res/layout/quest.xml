<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="85dp">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Quest name"
            android:id="@+id/questName"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="shortDescription"
            android:id="@+id/shortDescription"
            android:layout_below="@id/questName"
            android:layout_alignStart="@id/questName"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/time"
            android:layout_below="@+id/shortDescription"
            android:layout_alignStart="@+id/shortDescription"/>
    <ImageView
            android:layout_width="75dp"
            android:layout_height="85dp"
            android:id="@+id/startImage"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"/>
</RelativeLayout>